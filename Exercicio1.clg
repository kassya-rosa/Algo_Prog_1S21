algoritmo exer1;
// Síntese
//  Objetivo:  Mostrar em minutos e segundos o valor da hora inteira declarada
//  Entrada : hora inteira
//  Saída   : minutos e segundos

principal
	// Declarações de variáveis
	inteiro hora;
	inteiro minutos;
	inteiro segundos;
	// Instruções
	escreva("Informe a hora inteira:");
	leia (hora);
	minutos = hora*60;
	segundos = minutos*60;
	escreva ("Minutos: ", minutos, ". Segundos: ", segundos);
fimPrincipal
