algoritmo exer3;
// Síntese
//  Objetivo: Calcular a média aritmética de 3 números
//  Entrada : 3 números
//  Saída   : Média dos 3 números

principal
	// Declarações de variáveis
	real num1, num2, num3, media;
	// Instruções
	// Perguntar a área do círculo
	escreva("Informe três números: ");
	leia(num1);
	escreva("");
	leia(num2);
	escreva("");
	leia(num3);
	// Calcula a área
	media = (num1 + num2 + num3)/3;
	// Informa a área do círculo
	escreva("A média é: ", media);
fimPrincipal
